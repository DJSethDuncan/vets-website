{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "APPLICATION FOR CHAMPVA BENEFITS",
  "type": "object",
  "additionalProperties": false,
  "definitions": {
    "fullName": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "first",
        "last"
      ],
      "properties": {
        "first": {
          "type": "string",
          "minLength": 1,
          "maxLength": 30
        },
        "middle": {
          "type": "string"
        },
        "last": {
          "type": "string",
          "minLength": 1,
          "maxLength": 30
        }
      }
    },
    "ssn": {
      "type": "string",
      "pattern": "^[0-9]{9}$"
    },
    "date": {
      "pattern": "^(\\d{4}|XXXX)-(0[1-9]|1[0-2]|XX)-(0[1-9]|[1-2][0-9]|3[0-1]|XX)$",
      "type": "string"
    },
    "gender": {
      "type": "string",
      "enum": [
        "F",
        "M"
      ]
    },
    "phone": {
      "type": "string",
      "minLength": 10
    },
    "email": {
      "type": "string",
      "maxLength": 256,
      "format": "email"
    },
    "address": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "street",
        "city",
        "state",
        "postalCode"
      ],
      "properties": {
        "street": {
          "title": "Street Address 1",
          "type": "string",
          "minLength": 1,
          "maxLength": 50
        },
        "street2": {
          "title": "Street Address 2",
          "type": "string",
          "minLength": 1,
          "maxLength": 50
        },
        "city": {
          "title": "City",
          "type": "string",
          "minLength": 1,
          "maxLength": 51
        },
        "state": {
          "title": "State",
          "type": "string",
          "enum": [
            "AL",
            "AK",
            "AS",
            "AZ",
            "AR",
            "AA",
            "AE",
            "AP",
            "CA",
            "CO",
            "CT",
            "DE",
            "DC",
            "FM",
            "FL",
            "GA",
            "GU",
            "HI",
            "ID",
            "IL",
            "IN",
            "IA",
            "KS",
            "KY",
            "LA",
            "ME",
            "MH",
            "MD",
            "MA",
            "MI",
            "MN",
            "MS",
            "MO",
            "MT",
            "NE",
            "NV",
            "NH",
            "NJ",
            "NM",
            "NY",
            "NC",
            "ND",
            "MP",
            "OH",
            "OK",
            "OR",
            "PW",
            "PA",
            "PR",
            "RI",
            "SC",
            "SD",
            "TN",
            "TX",
            "UT",
            "VT",
            "VI",
            "VA",
            "WA",
            "WV",
            "WI",
            "WY"
          ]
        },
        "postalCode": {
          "title": "Zip Code",
          "type": "string",
          "pattern": "^(\\d{5})(?:[-](\\d{4}))?$"
        }
      }
    },
    "vetRelationship": {
      "type": "string",
      "enum": [
        "Spouse",
        "Father",
        "Mother",
        "Son",
        "Daughter",
        "Brother",
        "Sister",
        "Significant Other",
        "Relative - Other",
        "Friend/Neighbor",
        "Grandchild"
      ]
    },
    "centralMailVaFile": {
      "type": "string",
      "pattern": "^\\d{8,9}$"
    }
  },
  "properties": {
    "veteran": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "fullName",
        "ssnOrTin",
        "vaClaimNumber",
        "address",
        "phoneNumber",
        "dateOfBirth"
      ],
      "properties": {
        "fullName": {
          "$ref": "#/definitions/fullName"
        },
        "ssnOrTin": {
          "$ref": "#/definitions/ssn"
        },
        "vaClaimNumber": {
          "title": "VA Claim Number",
          "$ref": "#/definitions/centralMailVaFile"
        },
        "address": {
          "$ref": "#/definitions/address"
        },
        "phoneNumber": {
          "$ref": "#/definitions/phone"
        },
        "dateOfBirth": {
          "$ref": "#/definitions/date"
        },
        "dateOfMarriage": {
          "$ref": "#/definitions/date"
        },
        "isDeceased": {
          "title": "Is the Veteran deceased?",
          "type": "boolean"
        },
        "dateOfDeath": {
          "$ref": "#/definitions/date"
        },
        "isActiveServiceDeath": {
          "type": "boolean"
        }
      }
    },
    "applicants": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "fullName",
          "ssnOrTin",
          "gender",
          "email",
          "address",
          "phoneNumber",
          "dateOfBirth",
          "isEnrolledInMedicare",
          "hasOtherHealthInsurance",
          "vetRelationship"
        ],
        "properties": {
          "fullName": {
            "$ref": "#/definitions/fullName"
          },
          "ssnOrTin": {
            "$ref": "#/definitions/ssn"
          },
          "gender": {
            "$ref": "#/definitions/gender"
          },
          "email": {
            "$ref": "#/definitions/email"
          },
          "address": {
            "$ref": "#/definitions/address"
          },
          "phoneNumber": {
            "$ref": "#/definitions/phone"
          },
          "dateOfBirth": {
            "$ref": "#/definitions/date"
          },
          "isEnrolledInMedicare": {
            "type": "boolean"
          },
          "hasOtherHealthInsurance": {
            "type": "boolean"
          },
          "vetRelationship": {
            "$ref": "#/definitions/vetRelationship"
          }
        }
      }
    }
  },
  "required": [
    "veteran",
    "applicants"
  ]
}